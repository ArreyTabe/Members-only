

<div class="container">

<%= form_for  :post, url: posts_path do  |f| %>
    <div class="field form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class:"form-control" %>
   </div>

   <div class="field form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class:"form-control" %>
   </div>

    <div class="actions">
        <%= f.submit class:"btn btn-info" %>
  </div>
<% end %>


</div>